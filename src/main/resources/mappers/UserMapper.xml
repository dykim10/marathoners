<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.marathon.repository.UserRepository">

    <select id="findByUserName" resultType="User">
        SELECT * FROM tb_users WHERE user_name = #{userName}
    </select>

    <select id="findByUserId" resultType="User">
        SELECT * FROM tb_users WHERE user_id = #{userId}
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO tb_users (username, password, role) VALUES (#{username}, #{password}, #{role})
    </insert>

</mapper>
