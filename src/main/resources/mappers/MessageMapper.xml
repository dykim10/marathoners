<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.marathon.mapper.MessageMapper">

    <!-- 모든 메시지 조회 -->
    <select id="findAll" resultType="Message">
        SELECT * FROM message
    </select>

    <!-- 메시지 내용으로 조회 -->
    <select id="findByContent" resultType="Message">
        SELECT * FROM message WHERE message = #{content}
    </select>

    <!-- ID로 메시지 조회 -->
    <select id="findById" resultType="Message">
        SELECT * FROM message WHERE id = #{id}
    </select>

    <!-- 메시지 추가 -->
    <insert id="insert" parameterType="Message">
        INSERT INTO message (message) VALUES (#{message})
    </insert>

    <!-- 메시지 삭제 -->
    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM message WHERE id = #{id}
    </delete>
</mapper>
